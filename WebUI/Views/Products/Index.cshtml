@model List<WebUI.Models.ProductWithStock>

<h2>Товары и остатки</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Артикул</th>
            <th>Остаток</th>
            <th>Изменить</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Sku</td>
            <td>@item.Quantity</td>
            <td>
                <form method="post" action="/Products/UpdateStock">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="number" name="quantity" value="@item.Quantity" />
                    <button type="submit">Сохранить</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
